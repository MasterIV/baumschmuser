<!DOCTYPE html>
<html>
	<head>
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>{{ options.page.name }}</title>
		{% for file in js %}<script type="text/javascript" src="{{ file }}"></script>{% endfor %}
		{% for file in css %}<link rel="stylesheet" href="{{ file }}" type="text/css" />{% endfor %}
		<link rel="stylesheet" type="text/css" href="{{ base_dir }}/css/style.css" />
	</head>

	<body>
		<div style="position: absolute;  bottom: 0; left: 0;"><img src="{{ base_dir }}/img/chars_left.png"></div>
		<div style="position: absolute;  bottom: 0; right: 0;"><img src="{{ base_dir }}/img/chars_right.png"></div>

		<div id="content">
			{{ content|raw }}
		</div>
	</body>
</html>
