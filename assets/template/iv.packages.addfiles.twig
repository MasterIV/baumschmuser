<div class="popup">
	<div class="modal-backdrop fade in" onclick="$('.popup').remove()"></div>
	<form method="post" action="{{ MODUL_SELF }}&action=update_files&edit={{ package.id }}">
		<div class="modal fade in">
			<div class="modal-header">
				<button type="button" class="close" onclick="$('.popup').remove()">&times;</button>
				<h3>Dateien hinzufügen</h3>
			</div>
			<div class="modal-body">
				{% for i, file in files %}
					<label for="file_{{ i }}" style="float: left; width: 50%; font-size: 12px">
					<input type="checkbox" name="files[]" value="{{ file }}" id="file_{{ i }}">
					{{ file }}</label>
				{% endfor %}
			</div>
			<div class="modal-footer">
				<a class="btn" onclick="$('.popup').remove()">Abbrechen</a>
				<button type="submit" class="btn btn-primary">Hinzufügen</button>
			</div>
		</div>
	</form>
